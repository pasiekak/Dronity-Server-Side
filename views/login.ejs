<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        const verify = () => {
            const login = document.forms["Login_form"]["login"].value;
            const password = document.forms["Login_form"]["password"].value;

            axios.post('/login', { login, password })
              .then(response => {
                // Obsługa odpowiedzi od serwera
                if(response.data.success) {
                    window.location.href = '/dashboard';
                }
              })
              .catch(error => {
                // Obsługa błędu
                console.error('Wystąpił błąd:', error);
              });
        }
    </script>
</head>
    <body>
        <form name="Login_form" onsubmit="verify(); return false">
            <h1>Witaj, zaloguj się</h1>

            <input type="text" name="login" placeholder="Login" required autofocus/>
            <input type="password" name="password" placeholder="Hasło" required/>

            <input type="submit" value="Zaloguj">
        </form>
    </body>
</html>